---
import JSDoc from "../JSDoc/JSDoc.astro";
import TypeTypeArguments from "../TypeSig/TypeTypeArguments";
import ReferenceMembers from "./Name/ReferenceMembers.astro";
import ReferenceName from "./Name/ReferenceName.astro";
import ReferenceParams from "./Name/ReferenceParams.astro";
import ReferenceReturn from "./Name/ReferenceReturn.astro";

export type Props = {
    data: any;
    parent?: string;
};

const { data, parent = "" } = Astro.props;
const Title = parent ? "h2" : "h1";
---

<article
    class="flex flex-col gap-1 text-fira"
    class:list={{
        "p-2": parent,
    }}
    id={`${parent}${data.name}`}
>
    <Title
        class:list={{
            "text-xl": !parent,
            "text-lg": parent,
        }}
    >
        <ReferenceName {data} /><TypeTypeArguments {data} /><ReferenceParams
            {data}
        /><ReferenceReturn {data} />
        <ReferenceMembers {data} />
    </Title>
    <JSDoc {data} />
</article>

<style is:global>
    .text-fira {
        font-family: "Fira Code Variable", monospace;
    }

    .badge-xl {
        height: 2rem /* 32px */;
        font-size: 1.25rem /* 20px */;
        line-height: 2rem /* 32px */;
        padding-left: 0.875rem /* 14px */;
        padding-right: 0.875rem /* 14px */;
    }
</style>
