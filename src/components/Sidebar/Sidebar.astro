---
import kaplayPackageJson from "@/../kaplay/package.json";
import kaplayOutlined from "@/assets/kaplay-o.webp";
import { Counter } from "@/components/Content/Counter";
import type { Locale, TranslationString } from "@/util/i18n";
import { getLangedRoute } from "@/util/path";
import Image from "astro/components/Image.astro";
import SidebarChangeLink from "./SidebarChangeLink.astro";
import SidebarLink from "./SidebarLink.astro";
import SidebarList from "./SidebarList.astro";

type LinkListEntry = {
    title: string;
    link: string;
};

export type SidebarEntry = {
    linkList: LinkListEntry[];
    folder: string;
};

export type SidebarProps = {
    sidebarMode?: "guides" | "reference";
    t: (key: TranslationString) => string;
    lang: Locale;
};

type Props = SidebarProps;

const { sidebarMode, t, lang } = Astro.props;
---

<div class="drawer lg:drawer-open h-full z-20">
    <input id="sidebar" type="checkbox" class="drawer-toggle" />

    <div class="drawer-content w-full">
        <slot />
    </div>
    <div class="drawer-side h-dvh">
        <label
            for="sidebar"
            aria-label="close sidebar"
            class="drawer-overlay"
        ></label>
        <div
            class="p-4 w-72 min-h-full bg-base-300 text-base-content"
            transition:persist
        >
            <figure>
                <a class="btn btn-ghost h-max" href={getLangedRoute(lang, "/")}>
                    <Image
                        src={kaplayOutlined}
                        alt="kaplay logo"
                        class="w-52 h-24 aspect-auto object-contain"
                    />
                </a>
            </figure>
            <Counter />
            <div class="px-4 pb-4">
                <p class="badge badge-primary badge-lg">
                    {kaplayPackageJson.version}
                </p>
            </div>
            <ul class="flex-col gap-2">
                <SidebarLink link="/" {lang}>{t("sidebar.home")}</SidebarLink>
                <SidebarLink
                    link="https://kaboomjs.com/discord"
                    target="_blank"
                    {lang}
                    noTranslate
                >
                    Discord
                </SidebarLink>
                <SidebarLink
                    link="https://github.com/marklovers/kaplay"
                    target="_blank"
                    {lang}
                    noTranslate
                >
                    GitHub
                </SidebarLink>
                <SidebarLink
                    link="/changelog"
                    {lang}
                    noTranslate
                >
                    What's new on v3001
                </SidebarLink>
                <SidebarLink
                    link="https://play.kaplayjs.com"
                    target="_blank"
                    {lang}
                    noTranslate
                >
                    {t("sidebar.playground")}
                </SidebarLink>
            </ul>
            <div class="divider"></div>
            <ul class="flex-col gap-2">
                <SidebarChangeLink link="/guides/install" {lang}>{
                    t("sidebar.guides")
                }</SidebarChangeLink>
                <SidebarChangeLink link="/reference" {lang}>{
                    t("sidebar.refdoc")
                }</SidebarChangeLink>
                <SidebarChangeLink link="/blog" {lang}>{
                    t("sidebar.blog")
                }</SidebarChangeLink>
            </ul>
            <div class="divider"></div>
            <SidebarList {sidebarMode} {t} {lang} />
        </div>
    </div>
</div>
