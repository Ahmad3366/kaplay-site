---
import kaplayOutlined from "@/assets/kaplay-o.webp";
import { Image } from "astro:assets";

const internalLinks = [
    {
        name: "About",
        url: "#about",
    },
    {
        name: "Example",
        url: "#example",
    },
    {
        name: "Team",
        url: "#team",
    },
    {
        name: "Community",
        url: "#community",
    },
];

const externalLinks = [
    {
        name: "Blog",
        url: "/blog",
        highlight: false,
    },
    {
        name: "Docs",
        url: "/guides/install",
        highlight: true,
    },
];
---

<!-- Navbar -->
<nav class="navbar bg-base-300 fixed">
    <!-- Menu for mobile -->
    <div class="w-full flex justify-between md:hidden">
        <!-- Logo -->
        <a class="btn btn-ghost text-lg">
            <img alt="Logo" src="/logo.svg" class="w-4" />
            Game Name
        </a>

        <div class="dropdown dropdown-end">
            <button class="btn btn-ghost">
                <i class="fa-solid fa-bars text-lg"></i>
            </button>

            <ul
                tabindex="0"
                class="dropdown-content menu z-[1] bg-base-200 p-6 rounded-box shadow w-56 gap-2"
            >
                <li><a>About</a></li>
                <li><a>Teams</a></li>
                <li><a>News</a></li>
                <li><a>Community</a></li>
                <a class="btn btn-primary btn-sm">
                    <i class="fa-brands fa-space-awesome"></i>
                    Access
                </a>
            </ul>
        </div>
    </div>

    <!-- Menu for desktop -->
    <div class="w-full hidden md:grid grid-cols-5 gap-2">
        <ul class="col-span-2 menu md:menu-horizontal justify-end hidden gap-2">
            {
                internalLinks.map((link) => (
                    <li>
                        <a class="font-semibold" href={link.url}>{link.name}</a>
                    </li>
                ))
            }
        </ul>

        <div class="flex justify-center">
            <a class="btn btn-ghost text-lg">
                <Image
                    class="h-full w-fit object-scale-down"
                    src={kaplayOutlined}
                    alt="KAPLAY, The JavaScript easy game library"
                />
                <span class="hidden">KAPLAY, a TypeScript Game Library</span>
            </a>
        </div>

        <ul
            class="col-span-2 menu md:menu-horizontal justify-start gap-4 hidden"
        >
            {
                externalLinks.map((link) => (
                    <li>
                        <a
                            class:list={["btn btn-sm", {
                                "btn-primary": link.highlight,
                                "btn-ghost": !link.highlight,
                            }]}
                            href={link.url}
                        >{link.name}</a>
                    </li>
                ))
            }
        </ul>
    </div>
</nav>
