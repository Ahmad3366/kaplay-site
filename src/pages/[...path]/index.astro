---
import Prose from "@/components/Content/Prose.astro";
import Footer from "@/components/Footer/Footer.astro";
import Layout from "@/layouts/Layout.astro";
import { getStaticPathsByLocales } from "@/util/path";
import { getEntry } from "astro:content";

export function getStaticPaths() {
    return getStaticPathsByLocales();
}

const indexEntry = getEntry("misc", "index");
const { Content } = await (await indexEntry).render();
---

<Layout
    sidebarMode="guides"
    meta={{
        title: "KAPLAY, The JavaScript easy game library",
        description:
            "KAPLAY is a JavaScript game library that makes it easy to create games. Is the successor of KABOOM.JS.",
        image: "/kaplaylogo.png",
        keywords: "kaplay, kaboom, game, library, javascript, easy, simple",
    }}
>
    <Prose>
        <Content />
    </Prose>

    <Footer />
</Layout>
