{
  "$schema": "./node_modules/@lunariajs/core/config.schema.json",
  "repository": {
    "name": "kaplayjs/kaplay-site",
    "branch": "main"
  },
  "defaultLocale": {
    "label": "English",
    "lang": "en"
  },
  "locales": [
    {
      "label": "English",
      "lang": "en"
    },
    {
      "label": "Espa√±ol",
      "lang": "es"
    }
  ],
  "files": [
    {
      "location": "guides/**/*.md",
      "pattern": "guides/@lang/@path",
      "type": "universal"
    },
    {
      "location": "src/content/misc/**/*.md",
      "pattern": "src/content/misc/@lang/@path",
      "type": "universal"
    },
    {
      "location": "src/content/misc/**/*.mdx",
      "pattern": "src/content/misc/@lang/@path",
      "type": "universal"
    },
    {
      "location": "src/locales/**/*.ts",
      "pattern": "src/locales/@lang/@path",
      "type": "universal"
    }
  ]
}
